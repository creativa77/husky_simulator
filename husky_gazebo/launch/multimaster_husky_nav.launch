<launch>
  <!-- robot_name needs to be a unique name for this robot -->
  <arg name="robot_name" doc="Robot name. Must match a namespace defined in the corresponding _multimaster_gazebo.launch file" />

  <arg name="laser_enabled" default="true"/>
  <arg name="ur5_enabled" default="false"/>
  <arg name="kinect_enabled" default="false"/>

  <!-- Use simulation clock -->
  <param name="/use_sim_time" value="true" />

  <!-- Robot description and state publisher -->
  <include file="$(find husky_description)/launch/description.launch">
    <arg name="laser_enabled" value="$(arg laser_enabled)" />
    <arg name="ur5_enabled" value="$(arg ur5_enabled)" />
    <arg name="kinect_enabled" value="$(arg kinect_enabled)" />
  </include>

  <!-- Robot launch files which are common to simulation and real robot -->
  <include file="$(find husky_control)/launch/control.launch"></include>

  <!-- Add here any additional common feature you would like to run -->

  <!-- Multimaster configuration -->
  <!-- Include common configuration -->
  <include file="$(find multimaster_launch)/launch/multimaster_common.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
    <!-- NOTE: This YAML configuration should move to a common husky package instead -->
    <arg name="yaml_path" value="$(find husky_gazebo)/param/husky_nav.yaml" />
  </include>
  <!-- Include additional configuration for simulation -->
  <include file="$(find multimaster_launch)/launch/multimaster_gazebo_robot.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include>
</launch>
